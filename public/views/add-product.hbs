<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <title>Agregar producto</title>
  </head>

  <body>
    <div id="container" class="container">
      {{> nav-bar}}
      <section style="background-color: #508bfc;">
        <div class="container py-5 h-100">
          <div
            class="row d-flex justify-content-center align-items-center h-100"
          >
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                  <h3 class="mb-5">Complete los datos del producto</h3>
                  <form
                    action="/api/products/"
                    method="post"
                    enctype="X-www-form-urlencoded"
                  >

                    <div class="form-outline mb-4">
                      {{! Name }}
                      <input
                        placeholder="Nombre del producto"
                        type="text"
                        id="name"
                        class="form-control form-control-lg mb-2 text-center"
                        name="name"
                        required
                      />
                      {{! Description }}
                      <input
                        placeholder="Descripción"
                        type="text"
                        id="description"
                        class="form-control form-control-lg mb-2 text-center"
                        name="description"
                        required
                      />

                      {{! Code }}
                      <input
                        placeholder="Código del producto"
                        type="text"
                        id="code"
                        class="form-control form-control-lg mb-2 text-center"
                        name="code"
                        required
                      />

                      {{! Category }}
                      <input
                        placeholder="Categoría del producto"
                        type="text"
                        id="category"
                        class="form-control form-control-lg mb-2 text-center"
                        name="category"
                        required
                      />

                      {{! Thumbnail }}
                      <input
                        placeholder="Foto del producto"
                        type="text"
                        id="thumbnail"
                        class="form-control form-control-lg mb-2 text-center"
                        name="thumbnail"
                        required
                      />
                      {{! Price }}
                      <input
                        placeholder="Precio"
                        type="number"
                        id="price"
                        class="form-control form-control-lg mb-2 text-center"
                        name="price"
                        required
                      />

                      {{! Stock }}
                      <input
                        placeholder="Stock"
                        type="number"
                        id="stock"
                        class="form-control form-control-lg mb-3 text-center"
                        name="stock"
                        required
                      />

                    </div>
                    <button
                      id="register"
                      class="btn btn-primary btn-lg btn-block"
                      type="submit"
                    >Agregar un producto</button>

                  </form>
                  <hr class="my-4" />
                  <a class="btn btn-primary btn-lg btn-block" href="/">Ir a la
                    página principal</a>

                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

    </div>
    <script src="/register.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    >
    </script>
  </body>

</html>